# ============================================
# 服务器3环境变量 - 管理服务器
# ============================================
#
# 此服务器运行管理后台、蜘蛛池、数据库
# 仅内网或VPN访问

# Node环境
NODE_ENV=production
PORT=3100

# ============================================
# 数据库配置（主库，可读写）
# ============================================
DATABASE_URL="postgresql://admin_user:your_strong_password@localhost:5432/seo_websites?schema=public"

# 数据库连接池配置
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# ============================================
# NextAuth 配置
# ============================================
NEXTAUTH_SECRET="your-nextauth-secret-key-at-least-32-chars"
NEXTAUTH_URL="http://内网IP:3100"

# ============================================
# 加密配置
# ============================================
SETTINGS_ENCRYPTION_KEY="your-encryption-key-at-least-48-chars"

# ============================================
# API 安全配置
# ============================================
# API密钥（用于服务器间认证，需与服务器1的API_SECRET_KEY相同）
API_SECRET_KEY="your-api-secret-key-shared-with-server1"

# 允许的前端服务器IP
ALLOWED_FRONTEND_IPS="服务器1_IP,服务器2_IP"

# 管理员模式（只允许管理员访问）
ADMIN_ONLY_MODE=true

# ============================================
# 蜘蛛池配置
# ============================================
# 百度提交
BAIDU_SITE=telegram1688.com
BAIDU_TOKEN=your-baidu-site-token

# Google Search Console
GOOGLE_SITE_VERIFICATION=your-google-verification-code

# 必应站长工具
BING_SITE_VERIFICATION=your-bing-verification-code

# 每次提交的URL数量
SPIDER_BATCH_SIZE=100

# 提交间隔（秒）
SPIDER_SUBMIT_INTERVAL=60

# ============================================
# SEO API 配置
# ============================================
# Tavily API（用于获取SEO数据）
TAVILY_API_KEY=your-tavily-api-key

# DataForSEO API（可选）
DATAFORSEO_LOGIN=your-dataforseo-login
DATAFORSEO_PASSWORD=your-dataforseo-password

# ============================================
# 网站URL配置（指向服务器1）
# ============================================
NEXT_PUBLIC_WEBSITE1_URL=https://telegram1688.com
NEXT_PUBLIC_WEBSITE2_URL=https://telegramjiaoyu.com
NEXT_PUBLIC_WEBSITE_TG_URL=https://telegramzhfw.com

# ============================================
# 日志配置
# ============================================
LOG_LEVEL=debug
LOG_FILE=/www/wwwlogs/server3-app.log

# 错误告警（可选，接入钉钉/企业微信）
ERROR_WEBHOOK_URL=https://your-webhook-url

# ============================================
# 备份配置
# ============================================
# 数据库备份目录
BACKUP_DIR=/www/backup/database
BACKUP_RETENTION_DAYS=30

# ============================================
# 监控配置
# ============================================
# 是否启用性能监控
ENABLE_MONITORING=true

# 监控数据保留天数
MONITORING_RETENTION_DAYS=7
